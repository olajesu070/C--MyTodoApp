<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyTodoApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyTodoApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @await Component.InvokeAsync("Header", new { currentView = ViewBag.currentView })
    </header>

    <div class="container-fluid">
        <div class="row">
            <aside class="col-md-3">
                @await Component.InvokeAsync("Sidebar", new { currentView = ViewBag.currentView })
            </aside>
            <main role="main" class="col-md-9 pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    
    <footer class="border-top footer text-muted">
        @await Component.InvokeAsync("Footer")
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
